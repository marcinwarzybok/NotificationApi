<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\EmailNotification\Shared\Model\EmailNotification" table="notification_email">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="uuid" type="string" column="uuid" nullable="false"/>
        <field name="message" type="string" column="message" nullable="false"/>
        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="false">
            <options>
                <option name="default">CURRENT_TIMESTAMP</option>
            </options>
        </field>
        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="false">
            <options>
                <option name="default">CURRENT_TIMESTAMP</option>
            </options>
        </field>
        <field name="status" enum-type="App\EmailNotification\Shared\Model\EmailNotificationStatus" nullable="false" column="status"/>
        <field name="subject" type="string" nullable="false"/>
        <field name="recipients" type="json" nullable="false"/>

        <indexes>
            <index name="idx_uuid" columns="uuid"/>
            <index name="idx_status" columns="status"/>
        </indexes>
    </entity>

</doctrine-mapping>
